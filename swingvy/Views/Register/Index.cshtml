<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - swingvy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/swingvy.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center ">
        <div class="w-50 shadow-sm p-3 mb-5 bg-body rounded bg-white" style="margin-top: 10%;">
            <div class="row mt-2 gx-0">
                <div class="col-2"></div>
                <form action="/Register/Register" method="post">
                    <div class="col">
                        <div class=""><h2><b>註冊！</b></h2></div>
                        <select name="type" id="leaveType">
                            <option value="" disabled selected>部門</option>
                            <option value="0">UI/UX</option>
                            <option value="1">前端</option>
                            <option value="2">後端</option>
                        </select>
                        <select name="position" id="leaveType">
                            <option value="" disabled selected>職位</option>
                            <option value="0">員工</option>
                            <option value="1">主管</option>
                        </select>
                        <div class="my-1"><input type="text" name="account" style="width: 65%;" placeholder="account"></div>
                        <div class="my-1"><input type="password" name="password" style="width: 65%;" placeholder="password" minlength="3" required></div>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="text-danger">@ViewBag.ErrorMessage</div>
                        }
                        <input class="btn_submit" type="submit" value="註冊">
                        <a href="/Login/Index">去登入</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>